{
  "name": "modules",
  "version": "1.0.0",
  "description": "Application to create tools.",
  "scripts": {
    "build": "tsc && node copyFiles.js",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run build && electron ./dist/main.js --dev",
    "package": "npm run build && npx electron-builder build"
  },
  "main": "./dist/main.js",
  "author": "aarontburn",
  "devDependencies": {
    "@types/yauzl-promise": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^7.32.0",
    "module_builder": "github:aarontburn/modules-module-builder#main",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "typescript": "^4.8.3",
    "yauzl-promise": "^4.0.0"
  },
  "productName": "Modules",
  "build": {
    "appId": "com.aarontburn.Modules",
    "asar": true,
    "files": [
      "./dist/**/*"
    ],
    "directories": {
      "output": "package"
    }
  }
}
